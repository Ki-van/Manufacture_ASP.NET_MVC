@model KP_MANUFACTURE_MVC.Models.Product_Raw

@{
    ViewData["Title"] = "Добавить";
}

<h1>Добавить</h1>

<h4>Расход сырья</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CostRate" class="control-label"></label>
                <input asp-for="CostRate" class="form-control" />
                <span asp-validation-for="CostRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lost" class="control-label"></label>
                <input asp-for="Lost" class="form-control" />
                <span asp-validation-for="Lost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product" class="control-label"></label>
                <select asp-for="Product" class ="form-control" asp-items="ViewBag.ProductName"></select>
            </div>
            <div class="form-group">
                <label asp-for="Raw" class="control-label"></label>
                <select asp-for="Raw" class ="form-control" asp-items="ViewBag.RawName"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
